.user-list-row
  min-height 56px
  margin-left 10px
  margin-right 0

.user-list-row > div
  outline none

.user-list-row .user-face
  che-developers-face()
  width 40px
  height 40px
  flex-shrink 0
  margin-left 10px
  margin-right 15px

.user-list-row .user-name .user-details
  font-size 0.9em
  margin-left 10px
  color $label-info-color

.user-list-row .user-details
  font-size 0.9em
  line-height 15px
  color $label-info-color

.user-list-row .user-actions
  margin-right 15px
  color $label-info-color
  cursor pointer
  height 24px
  font-size 24px
  line-height 24px

.user-list-row .user-actions span
  outline none
